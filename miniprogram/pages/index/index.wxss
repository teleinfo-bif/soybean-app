/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.headerblock{
  height: 590rpx;
  width: 100%;
}

.headerimage {
  height: 500rpx;
  width: 100%;
  z-index: -1;
  position:fixed; 
}

.putuserinfobutton {
  height: 100rpx;
  width: 220px;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 40rpx;
  margin-left:16px;
  border-left: none;
  border-right: none;
  display: flex;
  margin-top: 350rpx;
}

.userinfo-put {
  font-size: 32rpx;
  color: #000;
  background-color: white;
  background-size: cover;
  text-align: left;
  padding-left: 0;
  margin-left: 10px;
  line-height: 40rpx;
  margin-top:15px;
  width:130px;
}

.userinfo-img {
  width:50px;
  height:50px;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  margin-left:20rpx;
}


.head_title{
  margin:auto;
  color: #fff;
  margin-top:30px;
  text-align: center;
}


.weui-grids {
  width:90%;
  margin:auto;
  border-top: 0px;
  margin-top:8px;
}

.weui-grid {
  width:47.5%;
  height:165px;
  background-color: #fff;
}

.weui-grid__icon {
  width:90px;
  height:90px;
  margin-bottom: 15px;
}

.weui-grid_active {
  background-color: #ccc;
}