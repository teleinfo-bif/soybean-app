/**index.wxss**/

/* .page_container */

.page {
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-family: PingFangSC-Regular;
}

/* .page__hd {
  margin-bottom: 50rpx;
} */

.page-section-title{
  padding: 0;
}

.swiper-container {
  margin: auto;
  width: 720rpx;
  margin-top: 15rpx;
  border-radius: 20rpx;
  display: none;
}

.swiper-item{
  display: block;
  height: 150px;

  border-radius: 20rpx;
}

.swiper-item-container {
  border-radius: 20rpx;
  box-shadow:[inset] -10rpx 20rpx 40rpx 0rpx rgba(194, 199, 225, 0.47);
  -webkit-box-shadow: -5px 10px 20px 0px rgba(194, 199, 225, 0.47);
  opacity: 1;
}

.swiper-item-image {
  width: 720rpx;
  height: 300rpx;
  border-radius: 20rpx;
}

.headerblock {
  height: 560rpx;
  width: 100%;
}

.headerimage {
  height: 500rpx;
  width: 100%;
  background-color: #ffffff;
  z-index: -1;
  position: absolute ;
}

.putuserinfobutton {
  height: 100rpx;
  width: 440rpx;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 50rpx;
  margin-left: 32rpx;
  border-left: none;
  border-right: none;
  display: flex;
  margin-top: 340rpx;
}

.userinfo-put {
  font-size: 32rpx;
  color: #333333;
  text-align: left;
  padding-left: 0;
  margin-left: 20rpx;
  margin-top: 24rpx;
}

.userinfo-put_active {
  background-color: #ccc;
}

.userinfo-img-container {
  width: 64rpx;
  height: 64rpx;
  border-radius: 30rpx;
  padding-left: 0;
  margin-left: 20rpx;
  margin-top: 15rpx;
  background-size: cover;
  background-color: #ecedf1;
}

.userinfo-img {
  width: 44rpx;
  height: 44rpx;
  margin: 10rpx 5rpx 5rpx 8rpx;
}

.head_title {
  margin: auto;
  color: #fdfdff;
  margin-top: 60rpx;
  text-align: center;
  font-size: 36rpx;
}

.page__title {
  margin-left: 32rpx;
  font-size: 30rpx;
  line-height: 70rpx;
  color: #333333;  
  margin-top: 10rpx;
}

.weui-grids {
  width: 720rpx;
  margin: auto;
  border-style: none;
}

.weui-grid {
  width: 320rpx;
  height: 300rpx;
  margin: 10rpx;
  margin-left: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;

  /* box-shadow:[inset] x-offset y-offset blur-radius spread-radiuscolor */
  box-shadow:[inset] -10rpx 20rpx 40rpx 0rpx rgba(194, 199, 225, 0.47);
  -webkit-box-shadow: -5px 10px 20px 0px rgba(194, 199, 225, 0.47);
  opacity: 1;
}

.weui-grid__icon {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
}

.weui-grid__icon_jk {
  width: 155rpx;
  height: 155rpx;
  margin: 10rpx 10rpx 25rpx 70rpx;

  /* border-style: dotted;
  border-width: 2rpx; */
}

.weui-grid_active {
  background-color: #ccc;
}

.weui-grid__label_inactive { 
  color: #e1e1e1;
}

.weui-grid__label {
  font-size: 30rpx;
  color: #333333;

}


.group {
  background-color: #fff;
  width: 690rpx;
  margin: auto;
  border-radius: 20rpx;
}
.group-title {
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(234,234,239,1);
}
.group-title-name {
 margin-left: 21rpx; 
font-size:30rpx;
font-family:"PingFang SC";
font-weight:400;
color:rgba(51,51,51,1);

}
.group-title-icon {
  margin-right: 30rpx; 
  width: 250rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.group-title-icon-item {
  width: 45rpx;
  height: 45rpx;
}
.group-items {
  padding-bottom: 170rpx;
}
.group-item {
  height: 120rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-bottom: 1rpx solid rgba(234,234,239,1);
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: space-between; */
}
.group-item-title {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.group-item-icon-manger {
  font-size:20rpx;
}
.group-item-name { 
  margin-left: 10rpx;
font-size:30rpx;
font-family:"PingFang SC";
font-weight:400;
color:rgba(51,51,51,1);
max-width: 350rpx;
overflow: hidden;    
text-overflow: ellipsis; 
white-space: nowrap;
}
.group-item-icons {
  margin-left: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.group-item-icon {
  display: block;
  width: 72rpx;
  height: 72rpx;
}