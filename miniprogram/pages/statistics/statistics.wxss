.page-container .title {
  width: 750rpx;
  height: 88rpx;
  margin: 10rpx 0rpx;
  background-color: #ffffff;
  font-family: PingFangSC-Regular;
}

.title-image {
  width: 40rpx;
  height: 42rpx;
  padding: 24rpx 4rpx 24rpx 10rpx;
  float: left
}

.title-text {
  width: 160rpx;
  height: 30rpx;
  float: left;
  font-size: 20;
  padding: 30rpx 4rpx 30rpx 10rpx;
  line-height: 30rpx;
  color: #333333
}

.title-time {
  width: 280rpx;
  height: 90rpx;
  font-size: 30rpx;
  line-height: 90rpx;
  color: #4f7ef2;
  margin-right: 20rpx;
  
  display: flex;
  flex-wrap: wrap;
  float: right;
}

.title-time-icon {
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin: 25rpx auto;
}

.title-time-text {
  width: 200rpx;
