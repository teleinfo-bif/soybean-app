  margin-left: 10rpx;
}

.page-container .dashboard {
  margin: 10rpx;
  width: 720rpx;
  height: 250rpx;
  border-radius: 6rpx;
  background-color: #ffffff;
  box-shadow: rgba(194, 199, 225, 0.47);
  opacity: 1;
}

.dashboard-show {
  width: 216rpx;
  height: 220rpx;
  margin: 6rpx;
  float: left;
}

.dashboard-show-data {
  width: 100%;
  height: 55rpx;
  margin-top: 20rpx;
  text-align: center;
  font-size: 50rpx;
  line-height: 55rpx;
  color: #333333;

  /* border-style:dotted;
  border-width: 2rpx; */
}

.dashboard-show-text {
  width: 100%;
  height: 24rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 24rpx;
  color: #666666;
}

.page-container .template {
  width: 720rpx;
  height: 320rpx;
  margin:15rpx;
  background-color: #ffffff;
  border-radius: 6rpx;
}

.template-title {
  width: 720rpx;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
}

.template-title-text {
  width: 260rpx;
  height: 30rpx;
  margin: 15rpx 5rpx 5rpx 20rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #333333;
  float: left;
  display: flex;
  flex-direction: row;
}

.template-title-total {
  width: 380rpx;
  height: 30rpx;
  margin: 15rpx 5rpx 5rpx 20rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #666666;
  display: flex;
  flex-direction: row-reverse;
}

.template-show {
  width: 720rpx;
  height: 250rpx;
  float: left;
  margin: 5rpx;
}

