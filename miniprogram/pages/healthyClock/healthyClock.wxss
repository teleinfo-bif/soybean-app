radio {
  width: 38rpx;
}

/* 单选框未选中 */

radio .wx-radio-input {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}
.weui-btn-area{
  background-color: #F9F9F9;
}
/* 单选框选中后对勾样式 */

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background-color: #1759EF;
  border-color: #1759EF;
}

.weui-btn {
  background-color: #1759EF;
  border-radius: 0rpx;
}

.weui-btn-hover {
  background-color: #E6E6E6;
}

.weui-cell {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  margin-top:-23rpx;
}

.weui-cell:before {
  content: " ";
  position: absolute;
  top: 0;
  right: 0;
  height: 1rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.1);
  left: 16rpx;
}

.weui-cell:first-child:before {
  display: none;
}