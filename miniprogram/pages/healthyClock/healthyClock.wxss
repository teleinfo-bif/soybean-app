/* pages/databaseGuide/databaseGuide.wxss */

@import "../../style/guide.wxss";

.page-background{
  background-color: #ccc
}

.userinfo-avatar {
margin: 20rpx;
border-radius: 50%;
background-size: cover;
background-color: white;
}

.todayClicked{
  width: 100%;
  height: 326rpx;
  background-color: #fff;
  text-align: center;
}


.dec{
  padding:15rpx 20rpx;
  color: #fff;
  font-size: 25rpx;
  line-height: 34rpx;
  text-align: center;
}

.title{
  font-size: 55rpx;
  font-weight: 600;
  color: #fff;
  text-align: center;
}


.weui-cell{
  padding:0 30rpx;
  font-size: 30rpx;
  height:40px;
}

.weui-cells__title {
  font-size: 30rpx;
}

.weui-input{
  font-size: 30rpx;
  height: 1.41176471em;
  min-height: 1.41176471em;
  line-height: 1.41176471;
}

/* 单选框 */
.radio-group label {
    display: block;
    height: 56rpx;
    line-height: 26rpx;
    font-size: 30rpx;
    box-sizing: border-box;
    padding: 10rpx;
    margin-left:10px;
}

radio {
    width: 38rpx;
}

/* 单选框未选中 */
radio .wx-radio-input {
    width: 24rpx;
    height: 24rpx;
    border-radius: 50%;
}


/* 单选框选中后对勾样式 */
radio .wx-radio-input.wx-radio-input-checked::before{
    border-radius: 50%;
    width: 44rpx;
    height: 44rpx;
    line-height: 44rpx;
    text-align: center;
    font-size: 30rpx;   
    color:#fff;
    background-color: #4169E1;
    border-color: #4169E1;
}

.weui-btn {
  background-color: #4169E1;
}

.weui-btn-hover{
  background-color: #ccc;
}
