/* pages/databaseGuide/databaseGuide.wxss */
@import "../../style/guide.wxss";

.page {
  font-family: "PingFangSC-Regular";
  background-color: #f5f5f5;
}

.userinfo-avatar {
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.todayClicked {
  width: 100%;
  height: 326rpx;
  background-color: #fff;
  text-align: center;
}

.dec {
  padding: 15rpx 20rpx;
  color: #fff;
  font-size: 25rpx;
  line-height: 34rpx;
  text-align: center;
}

.title {
  font-size: 55rpx;
  font-weight: 600;
  color: #fff;
  text-align: center;
}

.page__bd {
  width: 700rpx;
  margin: auto;
  margin-top: 20rpx;
  background-color: #fff;
}

.weui-cells__title {
  color: #999999;
  font-size: 30rpx;

  /* border-style: dotted;
  border-width: 2rpx; */
}

.weui-cell_ {
  padding: 0 30rpx;
  font-size: 30rpx;
  height: 60rpx;
  border-bottom: 2rpx solid #F5F5F5;

  /* border-style: dotted;
  border-width: 2rpx; */
}

.weui-input {
  width: 100%;
  font-size: 30rpx;
  /* font-weight: 500; */
  /* margin-top: 5rpx; */
  padding-left: 8rpx;
}

/* 单选框 */

.radio-group {
  border-bottom: 2rpx solid #f5f5f5;
}

.radio-group label {
  display: block;
  height: 56rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  padding: 10rpx;
  margin-left: 10px;
  color: #999999;
}

radio {
  width: 38rpx;
}

/* 单选框未选中 */

radio .wx-radio-input {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}

/* 单选框选中后对勾样式 */

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background-color: #4169e1;
  border-color: #4169e1;
}

.weui-btn {
  background-color: #4169e1;
}

.weui-btn-hover {
  background-color: #ccc;
}
