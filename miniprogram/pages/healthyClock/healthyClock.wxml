          <view class="">
            <view class="">
              <view class="clock_form_input">
                <input class="weui-input" name="trainnumber" value="{{trainnumber}}" placeholder="请输入车次/航班/车牌" placeholder-class="placeholder-style"/>
              </view>
            </view>
          </view>
          <view class='devide-middle'/>
          
        </view>
