    <!-- 基本信息 -->
    <view class="personal-title">
      <view class="personal-icon"></view>
      <text class="personal-info"> 身份信息</text>
      <text class="{{personal_info_change}}" bindtap="personalInfoChange">修改</text>
    </view>

