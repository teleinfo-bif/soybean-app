<!--components/path-view/path-view.wxml-->
<view>
  <block wx:if="{{pathMode === 'mode1'}}">
    <view class="path-title">
      <view wx:if="{{currentPath.length != 0}}"class="path-title-1" bindtap="toPath" style="color:#4276FF;">返回上级</view>
      <view wx:if="{{currentPath.length == 0}}"class="path-title-1" bindtap="toPath" style="color:#4276FF;">请选择</view>
      <!--   <view class='right-arrow'/> -->
      <!--       <view class="btn"
            data-index="{{0}}"
            bindtap="toPath">{{firstFloorTxt}}</view> -->
      <scroll-view scroll-x class='srcoll-item' scroll-left="{{toEnd}}" >
        <view class='title-scroll'>
        <block wx:key="index" wx:for="{{currentPath}}" >
            <view  class='title-scroll-1'bindtap="toPath" data-index="{{index+1}}">{{item.text}}
            </view>
           <view  wx:if="{{index < currentPath.length}}" class='right-arrow' />
        
        </block>
        </view>
      </scroll-view>
