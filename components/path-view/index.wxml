      <block wx:key="index" wx:for="{{currentPath}}" >
        <view class="btn" bindtap="toPath" data-index="{{index+1}}">{{item.text}}
        </view>
        <view wx:if="{{index < currentPath.length -1 }}" class='right-arrow' />
      </block> -->
</view>
<!--内容-->
</block>
  <view class='divide-head' />
  <view class="list-view"  >
    <block wx:for="{{outValue}}" wx:key="index" >
      <view class="list-view-item" bindtap="tapItem" data-text="{{item[contentKey]}}" data-index="{{index}}" >
        <view wx:if="{{item.children.length == 0}}" class="list-view-item-title">{{item[contentKey]}}</view>
        <view  wx:if="{{item.children.length != 0}}"  style="color:#4276FF"class="list-view-item-title">{{item[contentKey]}}</view>
     <!--  <view class="right-arrow-2" wx:if="{{item.children.length != 0}}"></view> -->

    <!-- <view class="zhanwei" wx:if="{{item.children.length == 0}}"></view> -->
      <view class="list-view-item-btn" hidden="{{pageType == 'otherPage' && item.children !='' }}"
            catchtap="tapBtn"
            data-item="{{item}}">{{btnTxt}}</view>
       <!--  <view class='right-arrow-item' /> -->
      </view>
    </block>
  </view>
</view>