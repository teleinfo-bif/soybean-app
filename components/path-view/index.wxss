.right-arrow::after {
    display: inline-block;
    content: " ";
    height: 17rpx;
    width: 17rpx;
    border-width: 4rpx 4rpx 0 0;
    border-color:  #8a8a8a;
    border-style: solid;
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    right: 6rpx;
    margin-top: -9rpx;
}
.right-arrow-item {
    display :inline-block;
    position: relative;
    margin-right: 12rpx;
    margin-left:30rpx;
}
.right-arrow-item::after {
    display: inline-block;
    content: " ";
    height: 18rpx;
    width: 18rpx;
    border-width: 4rpx 4rpx 0 0;
    border-color: #CCCCCC;
    border-style: solid;
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    right: 6rpx;
    margin-top: -9rpx;
}
