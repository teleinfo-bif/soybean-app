/* pages/block/index.wxss */
page {
  min-height: 100%;
  background: #f7f7f7; }

.page {
  position: relative;
  width: 100%;
  height: 100%; }

.shade {
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 100; }

.block-record {
  display: inline-block;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  font-size: 30rpx;
  color: #666666;
  z-index: 101; }

.form-header {
  display: flex;
  align-items: center;
  width: 750rpx;
  height: 88rpx;
  background: white;
  font-size: 36rpx; }

.form-header::before {
  content: "";
  margin-right: 20rpx;
  margin-left: 30rpx;
  width: 12rpx;
  height: 40rpx;
  background: #1759ef; }

.btn-wrap {
  margin-top: 25rpx;
  margin-bottom: 50rpx;
  display: flex;
  justify-content: center; }

.block-success {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  margin-bottom: 20rpx; }
  .block-success image {
    width: 150rpx;
    height: 150rpx; }
  .block-success_icon {
    margin-top: 47rpx;
    margin-bottom: 40rpx; }
  .block-success_text {
    margin-bottom: 30rpx;
    font-size: 30rpx; }

.btn-wrap {
  display: block;
  margin: 20rpx 30rpx 50rpx; }
