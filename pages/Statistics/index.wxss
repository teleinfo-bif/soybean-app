  margin-left: 20rpx;
}

.statistic-box {
  display: flex;
  position: relative;
  z-index: 2;
  /* display: felx; *//* flex-direction: row; */
  margin: 24px auto 0;
  width: 690rpx;
  height: 248rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 5rpx 27rpx 0px rgba(194, 199, 225, 0.47);
  border-radius: 6rpx;
}

.statistic-box_item {
  box-sizing: border-box;
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* align-items: center; *//* justify-content: center; */
}

.statistic-box_item:nth-of-type(2)::before {
  content: "";
  display: block;
  position: absolute;
  top: 62rpx;
  left: 0;
  width: 1rpx;
  height: 100rpx;
  background: rgba(220, 220, 224, 1);
}

.statistic-box_item:nth-of-type(2)::after {
  content: "";
  display: block;
  position: absolute;
  top: 62rpx;
  left: 100%;
  width: 1rpx;
  height: 100rpx;
  background: rgba(220, 220, 224, 1);
}

.statistic-box_item_value {
  color: rgba(51, 51, 51, 1);
  font-size: 72rpx;
  line-height: 72rpx;
}

.statistic-box_item_label {
  margin-top: 50rpx;
  color: rgba(102, 102, 102, 1);
  font-size: 24rpx;
  line-height: 24rpx;
}

