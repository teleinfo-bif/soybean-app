.organization {
  box-sizing: border-box;
  margin: 0 30rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  background: #ffffff;
  /* box-shadow: 0rpx 5rpx 27rpx 0rpx rgba(194, 199, 225, 0.47); */
  border-radius: 35rpx;
  border-right: 1rpx solid rgba(0, 0, 0, 0.1);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1); }

.organization_head {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 71rpx; }

.organization_head::after {
  position: absolute;
  bottom: 0;
  left: -30rpx;
  right: 0;
  content: "";
  display: block;
  width: calc(100% + 60rpx);
  height: 1px;
  background-color: #f2f2f2;
  transform: scale(1); }

.organization_content {
  padding-bottom: 30rpx; }

.organization_item {
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 25rpx 0;
  font-size: 30rpx; }

.organization_item::after {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  content: "";
  display: block;
  width: 100%;
  height: 1px;
  background-color: #f2f2f2;
  transform: scale(1); }

.organization_item image {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%; }

.organization_item-name {
  flex: 1;
  padding-left: 15rpx;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx; }

.organization_item-btn {
  display: flex;
  justify-content: space-between;
  align-items: center; }

.organization_item-btn view,
.organization_item-btn .btn {
  width: 72rpx;
  height: 72rpx; }


.organization_item-logo {
  width: 120rpx;
  height: 120rpx;
  margin-right: 15rpx;
  border-radius: 50%; }

