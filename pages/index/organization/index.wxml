<!-- pages/index/organization/index.wxml -->
<block wx:if="{{groupList.length > 0}}">
  <view class="organization">
    <view class="organization_head van-hairline--bottom">
      <view class="organization_head-text">今日数据</view>
      <view class="organization_head-btn"></view>
    </view>
    <view class="organization_content">
      <view wx:for="{{groupList}}" wx:key="index" class="organization_item">
        <!-- 左侧群组logo 
        <view class="organization_item-logo">
          <image class="btn" src="{{item.logo?item.logo:'../../../static/images/defaultlogo.png'}}" />
        </view> -->
        <!-- 中间群组名称 -->
        <view class="organization_item-name" data-data="{{item}}" bind:tap="navigateToGroupIndex">
          {{item.name}}
        </view>
        <!-- 右侧操作按钮 -->
        <view class="organization_item-btn">
          <view wx:if="{{item.permission}}">
            <navigator url="/pages/statistics/index?groupId={{item.id}}&groupName={{item.name}}">
              <image class="btn" src="../../../static/images/stastic@3x.png" />
            </navigator>
          </view>
          <view>
            <navigator url="/pages/detail/index?groupId={{item.id}}&groupName={{item.name}}&permission={{item.permission}}">
              <image class="btn" src="../../../static/images/deatil_data@3x.png" />
            </navigator>
          </view>
        </view>
      </view>
    </view>
  </view>
</block>