<!-- pages/index/organization/index.wxml -->
<block wx:if="{{groupList.length > 0}}">
  <view class="organization">
    <view class="organization_head van-hairline--bottom">
      <view class="organization_head-text">今日数据</view>
      <view class="organization_head-btn"></view>
    </view>
    <view class="organization_content">
      <view wx:for="{{groupList}}" wx:key="index" class="organization_item">
        <!-- 公司Logo -->
        <view class="organization_item-logo">
          <navigator url="/pages/company/companyInfo/index?groupId={{item.id}}&permision={{item.permission}}">
            <image style="width: 80rpx;height:80rpx" src="{{item.logo != '' ?item.logo:'../../../static/images/companyDefault.png'}}" />
          </navigator>
        </view>
        <!-- <view class="organization_item_right"> -->
          <!-- 中间部门名称 -->
          <view class="organization_item_name_new" style="padding-left:0rpx;" data-data="{{item}}">
            <view wx:if="{{item.permission || item.dataPermission}}" class="organization_item-name-1" target="" data-data="{{item}}" bind:tap="navigateToGroupIndex">
              {{item.name}}
            </view>
            <navigator wx:else url="/pages/detail/index?groupId={{item.id}}&groupName={{item.name}}&permission={{item.permission}}" class="organization_item-name-1">
              {{item.name}}
            </navigator>
          </view>
          <!-- 右侧操作按钮 -->
          <view class="organization_item_right_button">
            <view wx:if="{{(item.permission || item.dataPermission==true) && item.children.length > 0}}" class="organization_item-btn">
              <view>
                <navigator url="/pages/statistics/index?groupId={{item.id}}&groupName={{item.name}}">
                  <image class="btn" src="../../../static/images/stastic@3x.png" />
                </navigator>
              </view>
              <view class="organization_item-name" data-data="{{item}}" bind:tap="navigateToGroupIndex">
                <image class="btn" src="../../../static/images/detail.png" />
              </view>
              <!-- <view class="organization_item-name">
                <navigator class="" target="" url="/pages/detail/index?groupId={{item.id}}&groupName={{item.name}}&permission=true" hover-class="navigator-hover" open-type="navigate">
                  <image class="btn-statistic" src="../../../static/images/detail.png" />
                </navigator>
              </view> -->
            </view>
            <view class="organization_item-btn" wx:if="{{(item.permission || item.dataPermission==true) && item.children.length === 0}}">
              <view>
                <navigator url="/pages/statistics/index?groupId={{item.id}}&groupName={{item.name}}">
                  <image class="btn" src="../../../static/images/stastic@3x.png" />
                </navigator>
              </view>
              <view class="organization_item-name">
                <navigator class="" target="" url="/pages/detail/index?groupId={{item.id}}&groupName={{item.name}}&permission={{item.permission||item.dataPermission}}" hover-class="navigator-hover" open-type="navigate">
                  <image class="btn-statistic" src="../../../static/images/detail.png" />
                </navigator>
              </view>
            </view>
            <view wx:if="{{item.permission==false && item.dataPermission==false}}" class="organization_item-btn">
              <navigator url="/pages/detail/index?groupId={{item.id}}&groupName={{item.name}}&permission={{item.permission}}">
                <image class="btn" src="../../../static/images/detail.png" />
              </navigator>
            </view>
          </view>
        <!-- </view> -->
      </view>
    </view>
  </view>
</block>