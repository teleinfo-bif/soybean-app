.status-circle {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%; }

.status-circle-green {
  background: #2eb541; }

.status-circle-yellow {
  background: #ff976a; }

.status-circle-red {
  background: #cc3535; }

.no-data-msg {
  margin-top: 20rpx 0 10rpx;
  color: 999;
  font-size: 28rpx;
  text-align: center; }
