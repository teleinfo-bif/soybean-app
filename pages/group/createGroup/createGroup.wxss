    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
    line-height:45rpx;
    margin-right: 30rpx;
} 
.personal{
    background-color: #ffffff;
    font-family: PingFangSC-Regular;
}
.personal-title{
    width: 100%;
    height: 105rpx;
    margin-top: 35rpx;
    font-size:36rpx;
    font-family:PingFangSC-Semibold,PingFang SC;
    font-weight:600;
    color:rgba(51,51,51,1);
