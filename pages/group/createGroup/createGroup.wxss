    margin-right:30rpx;
}
.personal-change-hide{
    display: none;
    float: right;
    color: #1759EF;
    margin-right:30rpx;
}
.personal-divide {
    width: 100%;
    height: 10rpx;
    background-color: rgba(249, 249, 249, 1);
} 
.personal-info-hd {
    font-size:32rpx;
    font-family:PingFangSC-Medium,PingFang SC;
