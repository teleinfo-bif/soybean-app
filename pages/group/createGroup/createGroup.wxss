/* pages/createGroup/createGroup.wxss */
page {
   background:rgba(245,245,245,1);
   box-sizing: border-box;
}
.tip-tip {
    padding-left: 30rpx;
    width:100%;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 26rpx;
    color:#1759ef;
    font-weight: 500;   
}
.logo, .name {
    border-bottom: 1rpx solid rgba(238,238,238,1);
}
.name-title {
    margin-left: 36rpx;
    height: 104rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    border-bottom: 1rpx solid rgba(238,238,238,1);
}
.icon {
    width: 44rpx;
    height: 44rpx;
}
.name-info {
    line-height: 104rpx;
    margin-left: 13rpx;
    font-size:34rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(51,51,51,1);
}
.name-input {
    height: 104rpx;
}
.info-input{
    height: 104rpx;
    font-size:34rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
    line-height:45rpx;
    margin-right: 30rpx;
    padding-left: 92rpx;
} 
.address {
   margin-left: 36rpx; 
   border-bottom: 1rpx solid rgba(238,238,238,1);
}
.address-title {
    height: 104rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    border-bottom: 1rpx solid rgba(238,238,238,1); 
}
.choose-address {
    margin-left: auto;
    padding-right: 30rpx;
    display: block;
    font-size:34rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(66,118,255,1);
}
.info-picker{
    /* width: 90%; */
    height: 104rpx;
    font-size:34rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
    line-height:45rpx;
    margin-right: 30rpx;
    padding-left: 54rpx;
} 
.org-intro {
    margin-left: 36rpx; 
}
.introduce-input {
    padding-top: 16rpx;
    padding-left: 54rpx;
    width: 90%;
    height: 206rpx;
    font-size:34rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
    line-height:45rpx;
    margin-right: 30rpx;
}
.file {
    margin-left: 36rpx; 
    border-bottom: 1rpx solid rgba(238,238,238,1);
    font-size:34rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(51,51,51,1);
 }
.choose-file {
    margin-left: auto;
    padding-right: 30rpx;
    display: block;
    font-size:34rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(66,118,255,1);
}
.download-info-item {
    display: flex;
    flex-direction: row;
    align-items: center;
}
.info-label-img {
    display: block;
    width: 40rpx;
    height: 40rpx;
}

.add-img {
    display: flex;
    justify-content: center;
    margin-bottom: 40rpx;
    padding-top:20rpx;
}
.add-img image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%; 
    overflow:hidden
}

.placeholder-style{
    font-size:34rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
    line-height:45rpx;
}
 
.personal{
    background-color: #ffffff;
    font-family: PingFangSC-Regular;
}

.personal-divide {
    width: 100%;
    height: 15rpx;
    background-color: rgba(249, 249, 249, 1);
} 


.info-choice{
    margin-top:50rpx;
    font-size: 30rpx;
    float: right;
    margin-right: 30rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(23,89,239,1);
    line-height:42rpx;
}  
.info-phone {
    float: right;
    margin-right: 16rpx;
    font-size: 30rpx;
    color: #4169E1;
} 
.personal-buttons{
    box-sizing: border-box;
    width: 100%;
    height: 191rpx;
    background: rgba(249,249,249,1);
    padding-top: 58rpx;
}   
.button-submit {
    display: block;
    background:  #1759EF;
    margin: auto;
    text-align: center;
    font-size:36rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(255,255,255,1);
    line-height:90rpx;
    width:686rpx;
    height:94rpx;
    background:rgba(23,89,239,1);
    border-radius:10rpx;
}
.one {
    font-size:34rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(51,51,51,1);
    text-align: center;
    margin-top: 28rpx;
    margin-bottom: 40rpx;
}
