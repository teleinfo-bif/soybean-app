}
.info-input{
    width: 90%;
    height: 45rpx;
    font-size:32rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
    line-height:45rpx;
    margin-right: 30rpx;
} 
.info-choice{
    margin-top:50rpx;
    font-size: 30rpx;
    float: right;
    margin-right: 30rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(23,89,239,1);
    line-height:42rpx;
}  
