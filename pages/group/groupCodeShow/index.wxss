/* pages/group/groupCodeShow/index.wxss */
page {
    background:rgba(247,247,247,1);
 }

 .container {
    background:rgba(255,255,255,1);
    margin-top: 18rpx;
    height: 472rpx;
 }
.con {
    height: 98rpx;
    margin: 0 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid rgba(220,220,224,1);
}

.text {
    font-size:36rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(102,102,102,1);
}

.code {
    margin: 105rpx 30rpx 0 30rpx;
    text-align: center;
    font-size: 60rpx;
    line-height: 60rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(51,51,51,1);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}
.code-text {
    width: 650rpx;
    text-align: center;
}

button {
    padding: 0rpx;
    margin: 0rpx;
    line-height: 100%;
    border-radius: 0;
    background-color: rgba(255,255,255,1);
}
.btn-hover {
    background-color: rgba(255,255,255,1);
}
button::after {
    border: none;
  }

.pro{
    margin-top: 50rpx;
    padding: 0 30rpx;
    line-height: 180%;
    text-align: center;
    font-size:28rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
}

.item {
    margin: 300rpx 96rpx 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.btn-item {
    width: 260rpx;
    text-align: center;
    display: flex;
    justify-content: center; }

.join-btn {
    width:260rpx;
    height:88rpx;
    line-height: 88rpx;
    background:rgba(23,89,239,1);
    border-radius:10rpx;
    font-size:30rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(255,255,255,1);
}
.quit-btn {
    width:260rpx;
    height:88rpx;
    line-height: 88rpx;
    background:rgba(234,234,234,1);
    border-radius:10rpx;
    font-size:30rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(19,19,19,1);    
}