page {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7; }

.scrollview {
  height: 100%; }

.top-box {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 110rpx;
  margin: 10rpx 15rpx;
  padding: 30rpx 20rpx 30rpx 20rpx;
  background: white;
  box-shadow: 0px 5rpx 27rpx 0px rgba(194, 199, 225, 0.47);
  border-radius: 10rpx; }

.share-box {
  position: relative;
  width: 60rpx;
  height: 60rpx; }
  .share-box image {
    width: inherit;
    height: inherit; }

.row-item {
  display: flex;
  margin: 10rpx 30rpx 0;
  padding: 0 30rpx;
  height: 100rpx;
  align-items: center;
  justify-content: space-between;
  background: white;
  box-shadow: 0px 5rpx 27rpx 0px rgba(194, 199, 225, 0.47);
  border-radius: 10rpx; }
  .row-item_right {
    display: flex;
    align-items: center;
    justify-content: center; }
    .row-item_right-statistic {
      display: flex;
      align-items: center; }
    .row-item_right .btn-statistic {
      display: inline-block;
      margin-left: 15rpx;
      width: 60rpx;
      height: 60rpx; }
    .row-item_right_btn {
      margin-left: 15rpx; }
      .row-item_right_btn-setting {
        color: #1759ef; }
      .row-item_right_btn-delete {
        color: red; }
