 <view class="head" style='height:88rpx;'>
        <view class="head-title">
          <Text>{{groupName}}</Text>
        </view>
        <button open-type='share'>
          <image  src="../../../static/images/fenxiang.png"  />
        </button>
        
        <view class="head-date" hover-class="none" hover-stop-propagation="false">
          <view>
            <picker mode="date" value="{{value}}" bindchange="onChange" end="{{now}}" fields="{{'day'}}">
              <view class="head-date-text">
                <image class="btn" src="../../../static/images/health_sign@3x.png" />
                {{clockInTime}}
              </view>
            </picker>
          </view>
        </view>
 </view>
   <view wx:if="{{children.length== 0}}" class="no-data-msg" hover-class="none" hover-stop-propagation="false">
        暂无详细信息
      </view>
<view style='margin-bottom:50rpx;' wx:if="{{children.length!=0 && isGroup === true &&activeTab == 0}}" class="" hover-class="none" hover-stop-propagation="false">
  <!-- 每一行 -->
  <view wx:for="{{children}}" wx:key="index" class="row-item">
    <!-- 左侧名字 -->
    <!-- <view wx:if="{{item.name=='后勤服务中心'}}" style="color: red;" class="row-item_left" bind:tap="nextLevelGroup" data-data="{{item}}">
      {{item.name}}
    </view> -->
    <!-- <view  class="row-item_left" bind:tap="nextLevelGroup" data-data="{{item}}">
      {{item.name}}
    </view> -->
     <view  class="row-item_left" wx:if='{{item.permission && item.groupType==0}}'  data-data="{{item}}" bind:tap="navigateToGroupIndex" >
          {{item.name}}
        </view>
          <navigator wx:else class="row-item_left" target="" url="/pages/detail/index?groupId={{item.id}}&groupName={{item.name}}&permission={{item.permission}}" hover-class="navigator-hover" open-type="navigate">
          {{item.name}}
        </navigator>
    <!-- 右侧操作按钮 -->
    <view class="row-item_right">
      <!-- <view class="row-item_right-number">100</view> -->
      <view class="row-item_right-statistic">
      <view style='margin-right:50rpx;'>
       {{item.userAccount}}人
      </view>
        <navigator class="" target="" url="/pages/statistics/index?groupId={{item.id}}&groupName={{item.name}}" hover-class="navigator-hover" open-type="navigate">
          <image class="btn-statistic" src="../../../static/images/stastic@3x.png" />
        </navigator>
         <view class="" wx:if='{{item.permission && item.groupType==0}}'  data-data="{{item}}" bind:tap="navigateToGroupIndex" >
          <image class="btn-statistic" src="../../../static/images/detail.png" />
        </view>
      
        <navigator wx:else class="" target="" url="/pages/detail/index?groupId={{item.id}}&groupName={{item.name}}&permission={{item.permission}}" hover-class="navigator-hover" open-type="navigate">
          <image class="btn-statistic" src="../../../static/images/detail.png" />
        </navigator>
      </view>
    </view>
  </view>
</view>
<!-- 展示下级部门信息 -->
<scroll-view wx:if="{{isGroup != true ||  activeTab == 1}}" class="scrollview" scroll-x="false" scroll-y="true" upper-threshold="50" lscroll-top="{{topNum}}" enable-back-to-top="true" bindscrolltoupper="" bindscrolltolower="lower" bindscroll="">
  <view class="" hover-class="none" hover-stop-propagation="false">
    <!-- 每一行 -->
    <view wx:for="{{memberData.records}}" wx:key="index" class="row-item">
      <!-- 左侧名字 -->
      <!-- <view wx:if="{{item.name=='后勤服务中心'}}" style="color: red;" class="row-item_left" bind:tap="nextLevelGroup" data-data="{{item}}">
        {{item.name}}
      </view> -->
      <view  class="row-item_left" bind:tap="nextLevelGroup" data-data="{{item}}">
        {{item.name}}
      </view>
      <!-- 右侧操作按钮 -->
      <view class="row-item_right">
        <view class="row-item_right_btn row-item_right_btn-setting">设置管理</view>
        <view class="row-item_right_btn row-item_right_btn-delete">删除</view>
        <!-- <view class="row-item_right-statistic">
