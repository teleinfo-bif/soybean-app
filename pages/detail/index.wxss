/* pages/Detail/index.wxss */
page {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7; }

.head {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15rpx;
  padding: 20rpx 40rpx 20rpx 20rpx;
  width: 750rpx;
  height: 88rpx;
  font-size: 30rpx;
  background: white;
  border-bottom: 1rpx solid #f2f2f2; }
  .head image {
    margin-right: 10rpx;
    width: 40rpx;
    height: 40rpx; }
  .head-title, .head-date,
  .head .head-date-text {
    display: flex;
    justify-content: center;
    align-items: center; }
  .head .head-date-text {
    color: #4169e1; }

.people-item {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  margin-left: 15rpx;
  padding-left: 20rpx;
  margin-right: 15rpx;
  box-shadow: 0px 5rpx 27rpx 0px rgba(194, 199, 225, 0.47);
  border-radius: 10rpx;
  /* padding-top: 30px;
  padding-bottom: 30px; */
  height: 100rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f2f2f2;
  font-size: 30rpx; }

.people-item > view {
  flex: 1; }

.people-item_name {
  height: 100%;
  display: flex;
  align-items: center;
  position: relative;
  padding-left: 0rpx;
  text-align: left;
  /* border-right: 1rpx solid #dcdce0; */
  /* border: 1rpx solid #DCDCE0; */ }

.people-item_sign {
  position: relative; }

.people-item_sign::before {
  content: "";
  position: absolute;
  left: 0;
  top: -50%;
  display: block;
  margin-top: 10rpx;
  height: 60rpx;
  background: #dcdce0; }

.people-item_status {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  /* display: flex;
  flex-direction: row; */
  /* align-items: center;
  justify-content: center; */ }

.status-circle {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  /* margin-left: 15rpx; */
  margin-right: 15rpx;
  border-radius: 50%; }

.status-circle-green {
  background: #2eb541; }

.status-circle-yellow {
  background: yellow; }

.status-circle-red {
  background: #cc3535; }

.status-circle-gray {
  background: #eee; }

.no-data-msg {
  margin-top: 300rpx;
  color: 999;
  font-size: 28rpx;
  text-align: center; }

.no-more-msg {
  margin: 20rpx auto 10rpx;
  color: 999;
  font-size: 28rpx;
  text-align: center; }

.head-title1 {
  white-space: nowrap;
  width: 260rpx;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis; }

button {
  background-color: #fff;
  padding: 0;
  line-height: 100%;
  border-radius: 0; }
  button::after {
    border: none; }

.reminder-clock {
  width:120rpx;
  height:50rpx;
  background:rgba(23,89,239,1);
  border-radius:4rpx;
  text-align: center;
  font-size:30rpx;
  line-height: 50rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
}

.reminder-clock-batch {
  width:148rpx;
  height:50rpx;
  background:rgba(23,89,239,1);
  border-radius:4rpx;
  text-align: center;
  font-size:30rpx;
  line-height: 50rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.people-item_sign_no {
  text-align: center;
}

.un-clock {
  background:#A9A9A9;
}