            <view class='item-name'style="width:460rpx;"> {{item2.name}} </view>
            <image class='del-img' data-id="{{item2.id}}" src="/static/images/del.png" bindtap="delDepartConfirm"  ></image>
            <image class='add-img' data-id="{{item2.id}}" src="/static/images/add.png" bindtap="toAddPage"></image>
          </view>
          <block wx:if="{{item2.children.length != 0}}" wx:key='index'  wx:for="{{item2.children}}" wx:for-item='item3'>
            <view class='item'  bindtap=''  style="width:auto;margin-left:70rpx;">
              <view class='item-name' style="width:440rpx;"> {{item3.name}} </view>
              <image class='del-img' data-id="{{item3.id}} " bindtap="delDepartConfirm"  src="/static/images/del.png"></image>
              <image class='add-img' data-id="{{item3.id}}" src="/static/images/add.png" bindtap="toAddPage"></image>
            </view>
             <block wx:if="{{item3.children.length != 0}}"wx:key='index'  wx:for="{{item3.children}}" wx:for-item='item4'>
                <view class='item'  bindtap='' style="width:auto;margin-left:90rpx;">
                  <view class='item-name'style="width:420rpx;"> {{item4.name}} </view>
                  <image class='del-img' data-id="{{item4.id}}" src="/static/images/del.png"  bindtap="delDepartConfirm"></image>
                  <image class='add-img' data-id="{{item4.id}}"src="/static/images/add.png" bindtap="toAddPage"></image>
                </view>
                <block wx:if="{{item4.children.length != 0}}" wx:key='index' wx:for="{{item4.children}}" wx:for-item='item5'>
