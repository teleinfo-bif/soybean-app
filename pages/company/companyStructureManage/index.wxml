<view class='dataCent'>
  <block wx:for="{{arrayMenu}}" wx:key='index' wx:for-item='item1'>
    <view class='item'  bindtap='' style="width:750rpx;padding-left:30rpx;" >
       <view class='item-name' style="width:480rpx;"> {{item1.name}} </view>
       <image class='add-img' data-id="{{item1.id}}" src="/static/images/add.png" style="margin-left:164rpx;" bindtap="toAddPage"></image>
    </view>
        <block wx:if="{{item1.children.length != 0}}" wx:key='index'  wx:for="{{item1.children}}" wx:for-item='item2' >
