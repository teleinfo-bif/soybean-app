                      <image class='del-img' data-id="{{item5.id}}"  src="/static/images/del.png"  bindtap="delDepartConfirm"></image>
                      <image class='add-img' data-id="{{item5.id}}"  src="/static/images/add.png" bindtap="toAddPage"></image>
                    </view>
                    <block wx:if="{{item5.children.length != 0}}"wx:key='index'  wx:for="{{item5.children}}" wx:for-item='item6'>
                        <view class='item'  bindtap='' style="width:auto;margin-left:130rpx;">
                          <view class='item-name' style="width:380rpx;"> {{item6.name}} </view>
                          <image class='del-img' data-id="{{item6.id}}"  src="/static/images/del.png"  bindtap="delDepartConfirm"></image>
                          <image class='add-img' data-id="{{item6.id}}"  src="/static/images/add.png" bindtap="toAddPage"></image>
                        </view>
                        <block wx:if="{{item6.children.length != 0}}" wx:key='index' wx:for="{{item6.children}}" wx:for-item='item7'>
                        <view class='item'  bindtap='' style="width:auto;margin-left:150rpx;" >
                          <view class='item-name' style="width:360rpx;"> {{item7.name}} </view>
                          <image class='del-img' data-id="{{item7.id}}" src="/static/images/del.png"  bindtap="delDepartConfirm"></image>
                          <image class='add-img' data-id="{{item7.id}}" src="/static/images/add.png" bindtap="toAddPage"></image>
                        </view>
                        </block>
                   </block>
               </block>
             </block>
          </block>
        </block>

  </block>
</view>
