<!--pages/company/companyAuth/index.wxml-->

  <view class='title-devide' />
  <!-- 基本信息 -->
  <view class="manage-title">部门选择</view>
  <view class='content'>
      <view class="section" bindtap="chooseCompany" >
        <text class="picker-choice" >请选择</text>
      <input class="picker" placeholder="{{groupName}}" placeholder-style="color: #333333"  value="{{groupName}}" disabled="true" >
      </input>
    </view>
    
    <view class='head-devide' />
    <!--管理员-->
    <view class="admin-hd">
      <view class="admin-hd-title">管理权限</view>
      <!-- <image class='del' hidden="true" bindtap="delManagerBtn" src='../../../static/images/del.png' data-type='0'></image> -->
      <image class='add' bindtap="addManager" src='../../../static/images/add.png' data-type='0'></image>
    </view>
    <view class='content-devide' />
    <block wx:for='{{managers}}' wx:key='index'>
      <view class='adimin-user'>
        <view class='adimin-user-1'>
          <image class='adimin-user-img' src="{{item.avatarUrl == '' ?'../../../static/images/manager.png' :item.avatarUrl}}" />
          <view calss='manager-user-1'>{{item.name}}</view>
        </view>
        <view  wx:if="{{selfId != item.id }}"class='delete-user' bindtap="delManagerConfirm" data-id="{{item.id}}">
           删除
        </view>
      </view>
      <view class='content-devide' wx:if="{{index != managers.length-1}}"/>
    </block>
    <view class='devide-item' />

    <!--数据库管理员-->
    <view class="admin-hd">
      <view class="admin-hd-title">统计权限</view>
      <!-- <image hidden="true" bindtap="delDataManagerBtn" src='../../../static/images/del.png' data-type='1'></image> -->
      <image class='add' bindtap="addDataManager" src='../../../static/images/add.png' data-type='1'></image>
    </view>
    <view class='content-devide' />
    <block wx:for='{{dataManagers}}' wx:key='index'>
      <view class='adimin-user'>
        <view class='adimin-user-1'>
          <image class='adimin-user-img' src="{{item.avatarUrl == '' ?'../../../static/images/manager.png' :item.avatarUrl}}" />
          <view calss='manager-user-1'>{{item.name}}</view>
        </view>
        <view  wx:if="{{selfId != item.id }}" class='delete-user' bindtap="delDataManagerConfirm" data-id="{{item.id}}">
           删除
        </view>
      </view>
      <view class='content-devide' wx:if="{{index != dataManagers.length-1}}"/>
    </block>

  </view>
