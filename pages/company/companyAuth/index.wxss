}
.delete-user{
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #3E85E9;
  letter-spacing: 0.41rpx;
  border: 1rpx solid #3E85E9;
  border-radius: 25rpx;
  padding-left:20rpx;
  padding-right:20rpx;
  line-height: 50rpx;
}