page {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7; }

.record-item {
  box-sizing: border-box;
  margin-top: 20rpx;
  padding: 15rpx 30rpx;
  width: 750rpx;
  height: 287rpx;
  background: white; }

.record-item_head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 36rpx; }

.record-item_head-status {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  line-height: 36rpx; }

.record-item_head-status .status-circle {
  margin-right: 20rpx; }

.record-item_head-date {
  color: #999;
  font-size: 30rpx; }

.status-circle {
  display: inline-block;
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%; }

.status-circle-green {
  background: #2eb541; }

.status-circle-yellow {
  background: yellow; }

.status-circle-red {
  background: #cc3535; }

.record-item_content {
  display: flex; }

.record-item_content_item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
  width: 50%; }

.record-item_content_item:nth-of-type(1)::after {
  content: "";
  display: block;
  position: absolute;
  right: 0;
  top: 129rpx;
  width: 1px;
  transform: scale(1, 1);
  height: 40rpx;
  background: #d2d2d2; }

.record-item_content_item-icon {
  font-size: 60rpx; }

.record-item_content_item-icon .iconxinshuaijiance,
.record-item_content_item-icon .iconwenduji {
  font-size: 60rpx !important; }

.record-item_content_item-label {
  font-size: 24rpx;
  color: #999; }

.record-item_content_item-value {
  font-size: 36rpx; }

.no-more-data {
  margin-top: 20rpx 0 10rpx;
  color: 999;
  font-size: 28rpx;
  text-align: center; }
