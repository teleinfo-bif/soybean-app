/* pages/help/index.wxss */
page {
   background-color: rgba(255,255,255,1);
   box-sizing: border-box;
}
.line {
    border-top: 1rpx solid rgba(235,235,235,1);
    padding-bottom: 80rpx;
}
.head {
    margin: 40rpx 34rpx;
    height: 40rpx;
    border-left: 8rpx solid rgba(75,150,232,1);
    padding-left: 18rpx;

    font-size:30rpx;
    font-family:PingFangSC-Semibold,PingFang SC;
    font-weight:600;
    color:rgba(51,51,51,1);
}

.content {
    margin-left: 34rpx;
    margin-right: 34rpx;
    padding-left: 26rpx;
    padding-right: 20rpx;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    border-bottom: 1rpx solid rgba(235,235,235,1);
}

.head-title {
    font-size:30rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(51,51,51,1);
    
}
.head-t {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.head-t-t{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 34rpx;
}
.down {
    display: block;
    width: 28rpx;
    height: 13rpx;
}
.right {
    display: block;
    width: 13rpx;
    height: 28rpx;
}

