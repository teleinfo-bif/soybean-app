<!-- pages/status/index.wxml -->
<view class="page">
  <view class="status">
    <view class="status_icon">
      <image src="../../static/images/success@3x.png" />
    </view>
    <view class="status_msg">
      <text style='font-size:40rpx;'>{{msg}}</text>
    </view>
  </view>
  <view wx:if="{{jigou=='1'}}" class="btn-item" style="width:350rpx">
    <view bind:tap="toCode">
      <van-button type="primary" color="#1759EF" block>绑定机构唯一码</van-button>
    </view>
  </view>
  <view wx:else class="btn-item">
    <van-button bind:click="redirectTo" type="primary" color="#1759EF" block>返回首页</van-button>
  </view>
  <!-- <view class="btn-item">
    <van-button bind:click="navigateTo" data-path='/pages/index/index' custom-style="" round="{{true}}" type="primary" color="#dddddd" block>
      <text class="btn_go-home">返回首页</text>
    </van-button>
  </view> -->
</view>
<!-- 注册新机构链接 -->
<view wx:if="{{jigou=='1'}}" class="group-create-location">
  <view bind:tap="redirectTo" style="display:inline-block">返回首页></view>
  <navigator url="/pages/group/createGroup/createGroup" style="display:inline-block;">
    注册新机构>
  </navigator>
</view>